

<h1>We'll make your shit short</h1>
<p>
  Enter a url that you wish to have shortened
</p>
<%= form_for @url, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit "create" %>
  </div>
<% end %>
